pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: jenkinsciinfra/terraform:latest
    command:
    - cat
    tty: true
"""
      defaultContainer('terraform')
    }
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
    timeout(time: 30, unit: 'MINUTES')
  }

  stages {
    stage('Prepare Terraform Environment') {
      steps {
        sh 'make prepare'
      }
    }
    stage('Validate Terraform Project') {
      steps {
        sh 'make validate'
      }
    }
  }
}
